@model SIGEC.Models.Study

@{
    ViewBag.Title = _("Studies_Delete");
}

<hgroup class="title">
    <h1><img alt="studies_image" src="~/Images/studies.png" />&nbsp;@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<h3>@_("Delete_Confirmation")</h3>
<div class="well">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <fieldset class="create">
                <legend>@_("Studies_EditLegend")</legend>
                <div class="row">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.name)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.name)
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.description)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.description)
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.status)</h3>
                        </div>
                        <div class="panel-body">
                            @((Model.status) ? _("MActive") : _("MInactive"))
                        </div>
                    </div>
                </div>
                <div class="col-lg-12  row pl0 form-group">
                    <input type="submit" value="@_("lblDelete")" class="btn btn-danger col-lg-2 ml2" />
                    @Html.ActionLink(_("lblCancel"), "Index", null, new { @class = "btn btn-default col-lg-2 ml3" })
                </div>
            </fieldset>
        }
    </div>
</div>
