@using SIGEC.Models

@model Patient

@{
    ViewBag.Title = _("Employee_Details");
}

<hgroup class="title">
    <h1><img src="~/Images/patients.png" />&nbsp;@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<div class="well">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>@_("Employee_EditLegend")</legend>
                <h4 class="section-subtitle">@_("lbl_PersonInfo")</h4>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.firstName)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.firstName)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.lastName)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.lastName)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.dni)</h3>
                            </div>
                            <div class="panel-body">
                                @Model.UserAccount.dni.CFormat("dni")
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.bornDate)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.bornDate)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.email)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.email)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.occupation)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.occupation)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.religion)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.religion)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.maritalStatus)</h3>
                            </div>
                            <div class="panel-body">
                                @_((((MaritalStatus)Convert.ToChar(Model.UserAccount.maritalStatus)).ToString()))
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.gender)</h3>
                            </div>
                            <div class="panel-body">
                                @_((((Genders)Convert.ToChar(Model.UserAccount.gender)).ToString()))
                            </div>
                        </div>
                    </div>
                </div>

                <h4 class="section-subtitle">@_("lblUserContact")</h4>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.Address.country)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.Address.country)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.Address.city)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.Address.city)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.Address.municipality)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.Address.municipality)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.Address.sector)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.Address.sector)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.Address.street)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.Address.street)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.Address.number)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.Address.number)
                            </div>
                        </div>
                    </div>
                </div>

                <h4>@_("lblPhones")</h4>
                <div class="row">
                    <div class="form-group col-lg-12">
                        <table class="defaultTable table table-striped table-bordered table-hover">
                            @{ Phone p = new Phone(); }
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => p.number)</th>
                                    <th>@Html.DisplayNameFor(model => p.type)</th>
                                    <th>@Html.DisplayNameFor(model => p.notes)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.UserAccount.Phones) 
                                { 
                                    <tr>
                                        <td>@item.number.CFormat("phone")</td>
                                        <td>@_(((PhoneTypes)item.type).ToString())</td>
                                        <td>@item.notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <h4 class="section-subtitle">@_("lblSystemInfo")</h4>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.Label(_("lblStatus"))</h3>
                            </div>
                            <div class="panel-body">
                                @_( (Model.UserAccount.status) ? "MActive" : "MInactive" )
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.username)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.username)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.UserAccount.createDate)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.UserAccount.createDate)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 row">
                    @Html.ActionLink(_("lblEdit"), "Edit", new { id = Model.ID }, new { @class = "btn btn-primary col-lg-2 ml2" })
                    @Html.ActionLink(_("lblCancel"), "Index", null, new { @class = "btn btn-default col-lg-2" })
                </div>
            </fieldset>
        }
    </div>
</div>
