@using SIGEC.CustomCode

@model IEnumerable<SIGEC.Models.Patient>

@{
    ViewBag.Title = _("Patients_Title");
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1><img src="~/Images/patients.png" />&nbsp;@ViewBag.Title.</h1>
            <h2></h2>
        </hgroup>
        <div class="well">
            <fieldset class="employee2">
                <legend>@_("Patients_IndexLegend")</legend>
                <div class="form-group col-lg-12">
                    <p>
                        @Html.ActionLink(_("lblNew"), "Create", null, new { @class = "btn btn-primary fr" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.createDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.dni)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.firstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.lastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.gender)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.status)
                                </th>
                                <th>@_("lblOptions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserAccount.createDate)
                                    </td>
                                    <td>
                                        @(item.UserAccount.dni.CFormat("dni"))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserAccount.firstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserAccount.lastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserAccount.gender)
                                    </td>
                                    <td>
                                        @(((bool)item.UserAccount.status) ? _("lblActive") : _("lblInactive"))
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "button_link edit_link" })
                                        @Html.ActionLink("MedicaHistory", "MedicalHistory", new { id = item.ID }, new { @class = "button_link add_link", title = _("Patients_MedicalHistory"), data_toggle="tooltip" })
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "button_link view_link" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "button_link delete_link" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
