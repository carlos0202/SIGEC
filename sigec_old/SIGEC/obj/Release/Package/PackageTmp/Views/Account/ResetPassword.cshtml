@model SIGEC.Models.ResetModel

@{
    ViewBag.Title = ("Account_ResetPassword");
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
            <h2></h2>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (!ViewData.ModelState.IsValid)
                { 
                <div class="alert alert-dismissable alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @Html.ValidationSummary()
                </div>
                }
                if (TempData["success"] != null)
                { 
                <div class="alert alert-dismissable alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @(TempData["success"])
                </div>
                }
                <fieldset>
                    <legend>@_("ResetPassword_Legend")</legend>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            @Html.CLabelFor(m => m.email)
                            @Html.CTextBoxFor(m => m.email)
                            @Html.CValidationMessageFor(m => m.email)
                        </div>
                    </div>
                    <div class="row form-group col-lg-12">
                        <input type="submit" class="btn btn-primary col-lg-2 ml2" value="@_("lblReset")" />
                        @Html.ActionLink(_("lblCancel"), "Login", null, new { @class = "btn btn-default col-lg-2" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
