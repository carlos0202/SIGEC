@model IEnumerable<SIGEC.Models.Study>

@{
    ViewBag.Title = _("Studies_Title");
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1>
                <img alt="studies_image" src="~/Images/studies.png" />
                @ViewBag.Title.</h1>
            <h2></h2>
        </hgroup>
        <div class="well">
            <fieldset class="index">
                <legend>@_("Studies_IndexLegend")</legend>
                <div class="form-group creatine col-lg-12">
                    <p>
                        @Html.ActionLink(_("lblNew"), "Create", null, new { @class = "btn btn-primary  fr" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12 pl0">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.name)
                                </th>
                                <th class="desc">
                                    @Html.DisplayNameFor(model => model.description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.createDate)
                                </th>
                                <th>@_("lblOptions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.createDate)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "button_link edit_link" })
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "button_link view_link" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "button_link delete_link" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
