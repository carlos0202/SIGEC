@using SIGEC.CustomCode

@model IEnumerable<SIGEC.Models.Doctor>

@{
    ViewBag.Title = _("Doctors_Title");
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1><img alt="doctor_picture" src="~/Images/doctor.png" />&nbsp; @ViewBag.Title.</h1>
            <h2></h2>
        </hgroup>
        <div class="well">
            <fieldset class="employee2">
                <legend>@_("Doctor_LegendIndex")</legend>
                <div class="form-group col-lg-12">
                    <p>
                        @Html.ActionLink(_("lblNew"), "Create", null, new { @class = "btn btn-primary fr" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.createDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.dni)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.firstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.lastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.gender)
                                </th>
                                <th>
                                    @_("lblSpeciality")
                                </th>
                                <th>@_("lblOptions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.createDate)
                                    </td>
                                    <td>
                                        @(item.User.dni.CFormat("dni"))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.firstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.lastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.speciality)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "button_link edit_link" })
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "button_link view_link" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "button_link delete_link" })
                                        @if (isAdmin) 
                                        {
                                             @Html.ActionLink("Rules", "Rules", new { id = item.ID, isDoctor = isDoctor }, new { @class = "button_link rules_link", title = _("Doctor_Rules"), data_toggle = "tooltip" })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
