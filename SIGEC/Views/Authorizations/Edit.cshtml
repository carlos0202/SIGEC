@using SIGEC.CustomCode
@using SIGEC.Models.ViewModels

@model AuthorizationsViewModel

@{
    ViewBag.Title = _("Authorizations_Edit");
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1><img src="~/Images/authorizations.png" />&nbsp;@ViewBag.Title.</h1>
            <h2></h2>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>@_("Authorizations_EditLegend")</legend>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(m => m.RoleId)
                            @Html.CDropDownListFor(m => m.RoleId, null, null, new { @class = "authorizationRole" })
                            @Html.CValidationMessageFor(m => m.RoleId)
                        </div>
                    </div>
                    @Html.Hidden("authorizationsUrl", Url.Action("GetRoleAuthorizations", "Authorizations"))
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <div class="partial">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-12">
                            <input type="submit" class="btn btn-primary col-lg-2" value="@_("lblSave")" />
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            //js/Global.js
            $.fn.authorizationsInit();
        });
    </script>
}