@using SIGEC.Models

@model Insurer

@{
    ViewBag.Title = _("Insurers_Delete");
}

<hgroup class="title">
    <h1><img src="~/Images/insurers.png" />&nbsp;@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<h3>@_("Delete_Confirmation")</h3>
<div class="well">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>@_("Insurers_EditLegend")</legend>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.name)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.name)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.RNC)</h3>
                            </div>
                            <div class="panel-body">
                                @Model.RNC.CFormat("rnc")
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.status)</h3>
                            </div>
                            <div class="panel-body">
                                @((Model.status) ? _("Active") : _("Inactive"))
                            </div>
                        </div>
                    </div>
                </div>

                <h4 class="section-subtitle">@_("lblUserContact")</h4>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.Address.country)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.Address.country)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.Address.city)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.Address.city)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.Address.municipality)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.Address.municipality)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.Address.sector)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.Address.sector)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.Address.street)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.Address.street)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.Address.number)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.Address.number)
                            </div>
                        </div>
                    </div>
                </div>

                <h4>@_("lblPhones")</h4>
                <div class="row">
                    <div class="form-group col-lg-12 scroll">
                        <table class="defaultTable table table-striped table-bordered table-hover">
                            @{ Phone p = new Phone(); }
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => p.number)</th>
                                    <th>@Html.DisplayNameFor(model => p.type)</th>
                                    <th>@Html.DisplayNameFor(model => p.notes)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Phones)
                                { 
                                    <tr>
                                        <td>@item.number.CFormat("phone")</td>
                                        <td>@_(((PhoneTypes)item.type).ToString())</td>
                                        <td>@item.notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-12 row form-group">
                    <input type="submit" value="@_("lblDelete")" class="btn btn-danger col-lg-2 ml2" />
                    @Html.ActionLink(_("lblCancel"), "Index", null, new { @class = "btn btn-default col-lg-2" })
                </div>
            </fieldset>
        }
    </div>
</div>
