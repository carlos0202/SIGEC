@model SIGEC.Models.Medicine

@{
    ViewBag.Title = _("Medicaments_Details");
}


<hgroup class="title">
    <h1><img alt="medicaments_picture" src="~/Images/medicaments.png" />&nbsp;@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<div class="well">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>@_("Medicaments_EditLegend")</legend>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.name)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.name)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.genericName)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.genericName)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.type)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.type)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.usage)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.usage)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.dosage)</h3>
                            </div>
                            <div class="panel-body">
                                @Html.DisplayFor(model => model.dosage)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.LabelFor(model => model.status)</h3>
                            </div>
                            <div class="panel-body">
                                @((Model.status) ? _("MActive") : _("MInactive"))
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="col-lg-12 row">
                    @Html.ActionLink(_("lblEdit"), "Edit", new { id = Model.ID }, new { @class = "btn btn-primary col-lg-2 ml2" })
                    @Html.ActionLink(_("lblCancel"), "Index", null, new { @class = "btn btn-default col-lg-2" })
                </div>
            </fieldset>
        }
    </div>
</div>
