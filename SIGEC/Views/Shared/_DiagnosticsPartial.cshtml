@model SIGEC.Models.Disease

<div class="modal fade dn ignore" id="diagnosticsModal" data-focus-on="input:first" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title diagTitle">@_("lblDiagnoseAdd")</h4>
    </div>
    <div class="col-lg-12">
        <div class="modal-body diagBody">
            <div class="row">
                @Html.Hidden("diseaseID", "")
                <div class="form-group col-lg-12">
                    @Html.CLabelFor(model => model.diagnoseCode)
                    @Html.CDropDownListFor(model => model.diagnoseCode, null, null, new { @class = "chosen" })
                </div>
                <div class="form-group col-lg-12">
                    @Html.CLabelFor(model => model.observations)
                    @Html.CTextAreaFor(model => model.observations, new { @class = "mObservations" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn btn-default">@_("lblClose")</a>
        <input type="button" class="btn btn-primary diagnosticAction" value="@_("lblSave")" />
    </div>
</div>

<h4>@_("lblDiagnostics")</h4>
<div class="row">
    <div class="form-group col-lg-12">
        <a class="btn btn-primary addDiagnostic" data-toggle="modal" href="#diagnosticsModal">@_("lblAdd") </a>
        @Html.Hidden("addDiagnosticUrl", Url.Action("AddDiagnostic", "Consultations"))
    </div>
    <div class="table-responsive">

        @Html.Hidden("editDiagUrl", Url.Action("EditDiagnostic", "Consultations"))
        @Html.Hidden("deleteDiagUrl", Url.Action("DeleteDiagnostic", "Consultations"))
        <table class="defaultTable diagnosticsTable table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.diagnoseCode)</th>
                    <th>@Html.DisplayNameFor(model => model.observations)</th>
                    <th>@_("lblOptions")</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
