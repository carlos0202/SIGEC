@model DGII_PFD.Models.UsersViewModel

@{
    ViewBag.Title = "Crear Usuario";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1>@ViewBag.Title</h1>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Crear un nuevo usuario</legend>
                    @Html.Hidden("refreshUsersUrl", Url.Action("GetUsers", "Users"))
                    <div class="row">
                        <div class="form-group col-sm-6 col-xs-12">
                            @Html.CLabelFor(m => m.UserId)
                            <div class="input-group">
                                @Html.CDropDownListFor(m => m.UserId, null, null, new { @class = "chosen" })
                                <label for="UserID" class="input-group-addon btn refreshUsers">
                                    <i class="glyphicon glyphicon glyphicon-refresh" title="Actualizar Datos" data-toggle="tooltip"></i>
                                </label>
                            </div>
                            @Html.CValidationMessageFor(m => m.UserId)
                        </div>
                        <div class="form-group col-sm-6 col-xs-12">
                            @Html.CLabelFor(m => m.RoleId)
                                @Html.CDropDownListFor(m => m.RoleId, null, null, new { @class = "chosen" })
                            @Html.CValidationMessageFor(m => m.RoleId)
                        </div>
                    </div>

                    <div class="row form-group col-sm-12">
                        <input type="submit" class="btn btn-primary ml2" value="Guardar" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.fn.CreateUser();
        });
    </script>
}


