@model PFD_PROCEDIMIENTOS

@{
    ViewBag.Title = "Asignar Formulario";
}

<div class="row">
    <div class="col-sm-12">
        <hgroup class="title">
            <h1>@ViewBag.Title</h1>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                    @Html.HiddenFor(m => m.ID)
                    <fieldset class="create">
                        <legend>Asignar Roles al Formulario</legend>
                        <div class="row">
                            <div class="panel panel-success col-sm-6">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.LabelFor(model => model.NOMBRE)</h3>
                                </div>
                                <div class="panel-body">
                                    @Html.DisplayFor(model => model.NOMBRE)
                                </div>
                            </div>
                            <div class="panel panel-success col-sm-6">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.LabelFor(model => model.PROCEDIMIENTO)</h3>
                                </div>
                                <div class="panel-body">
                                    @(Model.PROCEDIMIENTO.ToUpper())
                                </div>
                            </div>
                            <div class="panel panel-success col-sm-6">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.LabelFor(model => model.DESCRIPCION)</h3>
                                </div>
                                <div class="panel-body">
                                    @Html.DisplayFor(model => model.DESCRIPCION)
                                </div>
                            </div>
                            <div class="panel panel-success col-sm-6">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.LabelFor(model => model.HABILITADO)</h3>
                                </div>
                                <div class="panel-body">
                                    @((Model.HABILITADO == 1) ? "SI" : "NO")
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-12">
                                <label for="Roles" class="control-label" >Roles Asignados al Formulario</label>
                                @Html.CDropDownList("Roles", null, string.Empty, new { @class = "chosen-multiple", multiple="multiple", data_placeholder = "Seleccione los roles" })
                            </div>
                        </div>

                        <div class="row">
                            <label>&nbsp;</label><br />
                        </div>

                        <div class="row form-group col-sm-12">
                            <input type="submit" class="btn btn-primary ml2" value="Guardar" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </fieldset>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
        });
    </script>
}
