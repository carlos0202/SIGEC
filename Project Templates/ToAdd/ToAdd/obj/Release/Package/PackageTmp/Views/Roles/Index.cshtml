@model IEnumerable<DGII_PFD.Models.PFD_ROLES>

@{
    ViewBag.Title = "Roles";
}

<div class="row">
    <div class="col-sm-12">
        <hgroup class="title"></hgroup>
        <div class="well">
            <fieldset>
                <legend>Roles Registrados</legend>
                <div class="row buttonTable">
                    <div class="form-group col-sm-12 pr0">
                        <button class="btn btn-success fr mb10" data-toggle="modal" data-target="#createRoleModal">
                            Nuevo Rol
                        </button>
                    </div>
                </div>
                <div class="cols-sm-12">
                    <div class="table-responsive">
                        @Html.Hidden("updateRolesTableUrl", Url.Action("UpdateRolesTable", "Roles"))
                        @Html.Hidden("editRoleUrl", Url.Action("Edit", "Roles"))
                        @Html.Hidden("deleteRoleUrl", Url.Action("Delete", "Roles"))
                        <table class="table rolesTable table-striped table-bordered table-hover">
                            <thead>
                                <tr class="success">
                                    <th>
                                        @Html.DisplayNameFor(model => model.NOMBRE)
                                    </th>
                                    <th>Opciones&nbsp;&nbsp;&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NOMBRE)
                                        </td>
                                        <td>
                                            @Html.ActionLinkImage("pencil", "Edit", "Editar", new { id = item.ID }, new { @class = "iconLink editAction", data_url = @Url.Action("Edit", "Roles", new { id = item.ID }) })
                                            @Html.ActionLinkImage("remove-sign", "Delete", "Eliminar", new { id = item.ID }, new { @class = "iconLink deleteAction", data_url = @Url.Action("Delete", "Roles", new { id = item.ID }) })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </fieldset>
        </div>
    </div>
</div>
<div class="partialmodal">
    @Html.Partial("_CreateRolePartial", new PFD_ROLES())
</div>
<div class="partialModalEdit">
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $.fn.CreateRol();
        });
    </script>
}