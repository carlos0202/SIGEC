@model ConnectionViewModel

@{
    ViewBag.Title = "Agregar Conexión";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h1>@ViewBag.Title</h1>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Crear un nuevo usuario</legend>
                    <div class="row">
                        <div class="form-group col-sm-6 col-xs-12">
                            @Html.CLabelFor(m => m.Name)
                            @Html.CTextBoxFor(m => m.Name)
                            @Html.CValidationMessageFor(m => m.Name)
                        </div>
                        <div class="form-group col-sm-6 col-xs-12">
                            @Html.CLabelFor(m => m.DataSource)
                            @Html.CTextBoxFor(m => m.DataSource)
                            @Html.CValidationMessageFor(m => m.DataSource)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6 col-xs-12">
                            @Html.CLabelFor(m => m.UserId)
                            @Html.CTextBoxFor(m => m.UserId)
                            @Html.CValidationMessageFor(m => m.UserId)
                        </div>
                        <div class="form-group col-sm-6 col-xs-12">
                            @Html.CLabelFor(m => m.Password)
                            @Html.CPasswordFor(m => m.Password)
                            @Html.CValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-12">
                            <label>Cadena de conexi&oacute;n resultante.</label>
                            @Html.CTextArea("CstringResult", new { @readonly = "true", @class = "control-readonly" })
                        </div>
                    </div>
                    <div class="row form-group col-sm-12">
                        <input type="submit" class="btn btn-primary ml2" value="Guardar" />
                        @Html.ActionLink("Verificar Conexión", "CheckConnectionString", null, new { @class = "btn btn-info preventButton checkCString ml2" })
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $.fn.ConnectionsManagerCreate();
        });
    </script>
}